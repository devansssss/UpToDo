<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/prioritydialog"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Set task priority"
        android:textColor="#fff"
        android:fontFamily="@font/alata"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15sp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogrouppriority"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="20dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priority1"
            android:drawableTop="@drawable/always_white_flag"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:padding="15dp"
            android:background="@drawable/priorityselector"
            android:text="1"
            android:textColor="#fff"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/priority2"
            android:textAlignment="center"
            android:drawableTop="@drawable/always_white_flag"
            android:button="@android:color/transparent"
            android:background="@drawable/priorityselector"
            android:text="2"
            android:textColor="#fff"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/priority3"
            android:textAlignment="center"
            android:drawableTop="@drawable/always_white_flag"
            android:button="@android:color/transparent"
            android:background="@drawable/priorityselector"
            android:text="3"
            android:textColor="#fff"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/always_white_flag"
            android:textAlignment="center"
            android:id="@+id/priority4"
            android:button="@android:color/transparent"
            android:background="@drawable/priorityselector"
            android:text="4"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#8875ff"
            android:padding="10dp"
            android:fontFamily="@font/alata"
            android:id="@+id/cancelsetpriority"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:background="#8875ff"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:fontFamily="@font/alata"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/setpriority"
            android:text="Set Priority"/>
    </LinearLayout>


</LinearLayout>