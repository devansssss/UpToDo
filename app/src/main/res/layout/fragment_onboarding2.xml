<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding2"
    android:background="?attr/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:id="@+id/skipbtn2"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:background="@android:color/transparent"
            android:textColor="#777272"
            android:textSize="15sp"
            android:fontFamily="@font/alata"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="298dp"
            android:layout_height="298dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/frame_162"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:textColor="@android:color/transparent"
            android:text="0"
            android:layout_margin="10dp"
            android:background="@drawable/secondpage"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:textColor="@android:color/transparent"
            android:text="0"
            android:background="@drawable/currentpage"
            android:layout_margin="10dp"/>


    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alata"
            android:textColor="?attr/colorPrimary"
            android:text="Create daily routine"
            android:textSize="35sp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To-Do meter helps you in being productive"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/alata"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="#8875ff"
            android:text="NEXT"
            android:fontFamily="@font/alata"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnnext2"/>
    </LinearLayout>


</FrameLayout>